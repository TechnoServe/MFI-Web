{
  "functions": {
    "runtime": "nodejs20",
    "source": "functions"
  },
  "hosting": {
    "target": "mfi",
    "public": "public",
    "headers": [
      {
        "source": "/service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "predeploy": [
      "npm --prefix frontend run build"
    ],
    "rewrites": [
      {
        "source": "/api/v1/**",
        "function": "apiV1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": "6001"
    },
    "hosting": {
      "port": 5001
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    }
  },
  "storage": {
    "rules": "storage.rules"
  }
}
